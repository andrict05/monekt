<!doctype html>
<html
  lang="en"
  class="text-[62.5%] xs:text-[87.5%] sm:text-[100%] xl:text-[112.5%]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap"
      rel="stylesheet" />
    <title>Monekt - <%= title %></title>
    <link rel="stylesheet" href="css/output.css" />
    <script defer src="js/forgotPassword.js"></script>
  </head>
  <body
    class="relative flex h-screen w-screen flex-col items-center justify-center bg-sky-50">
    <%- include('templates/alert') %>
    <main
      class="flex w-80 flex-col items-center justify-center gap-9 rounded-lg bg-white p-4 shadow-sm xs:w-[22rem] sm:w-auto sm:p-10">
      <div class="">
        <img
          class="mx-auto h-10 w-auto"
          src="img/Logo-512x512.png"
          alt="Your Company" />
        <h2
          class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
          <%= locale.page.forgotPassword.heading %>
        </h2>
      </div>

      <div class="w-64 sm:w-72">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
          <form
            id="form-reset-password"
            class="space-y-6"
            action="#"
            method="POST">
            <div class="">
              <label
                for="email"
                class="block text-sm font-medium leading-6 text-gray-900"
                ><%= locale.text.email %></label
              >
              <div class="mt-2">
                <input
                  class="w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-sky-600 sm:text-sm sm:leading-6 [.invalid_&]:text-red-500 [.invalid_&]:ring-red-500"
                  type="email"
                  id="email"
                  name="email"
                  required
                  autocomplete="email" />
                <p
                  class="invisible h-0 max-w-full py-0 pl-1 text-sm text-red-500 [.invalid_&]:visible [.invalid_&]:mb-2 [.invalid_&]:h-auto [.invalid_&]:pt-1">
                  Not a valid email.
                </p>
              </div>
            </div>

            <div>
              <button
                type="submit"
                id="button-reset"
                class="flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600">
                <%= locale.text.buttons.resetPassword %>
              </button>
            </div>
          </form>

          <p class="mt-10 text-center text-sm text-gray-500">
            <%= locale.page.forgotPassword.noEmail %>
            <a
              href="/signup.html"
              class="font-semibold leading-6 text-sky-600 hover:text-sky-500">
              <%= locale.text.buttons.resendEmail %></a
            >
          </p>
        </div>
      </div>
    </main>
    <%- include('templates/languageSelect', locale) %>
  </body>
</html>
